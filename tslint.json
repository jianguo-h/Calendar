{
  "extends": "tslint:recommended",
  "rules": {
    "radix": false,
    "eofline": false,
    "one-line": false,
    "quotemark": false,
    "no-console": false,
    "no-reference": true,
    "prefer-const": true,
    "no-debugger": false,
    "no-construct": false,
    "prefer-for-of": false,
    "no-var-keyword": true,
    "callable-types": false,
    "interface-name": false,
    "member-ordering": false,
    "no-var-requires": false,
    "no-invalid-this": false,
    "no-string-literal": false,
    "no-empty-interface": true,
    "typedef-whitespace": true,
    "no-duplicate-super": true,
    "no-shadowed-variable": false,
    "no-implicit-dependencies": false,
    "no-invalid-template-strings": false,
    "indent": [true, "spaces", 2],
    "ban-types": [true, ["Function"]],
    "curly": [true, "ignore-same-line"],
    "member-access": [true, "no-public"],
    "whitespace": [true, "check-preblock"],
    "trailing-comma": [true, {"singleline": "never"}],
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "object-literal-sort-keys": [true, "match-declaration-order"],
    "max-line-length": [true, {"limit": 160, "ignore-pattern": "^import |^export {(.*?)}"}]
  }
}