  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": false,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}